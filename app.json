{
  "expo": {
    "name": "krishi-sakhi-farmer",
    "slug": "krishi-sakhi-farmer",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "krishisakhifarmer",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-barcode-scanner",
      "expo-sqlite",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "pwa": {
      "name": "AgriChain Odisha - Farmer App",
      "short_name": "AgriChain",
      "description": "Comprehensive agricultural platform for Odisha farmers with market intelligence, scheme tracking, and quality assessment",
      "start_url": "/",
      "display": "standalone",
      "theme_color": "#4CAF50",
      "background_color": "#ffffff",
      "orientation": "portrait-primary",
      "scope": "/",
      "lang": "en-IN",
      "categories": ["business", "productivity", "utilities"],
      "icons": [
        {
          "src": "./assets/images/icon.png",
          "sizes": "192x192",
          "type": "image/png",
          "purpose": "any maskable"
        },
        {
          "src": "./assets/images/icon.png",
          "sizes": "512x512",
          "type": "image/png",
          "purpose": "any maskable"
        }
      ],
      "shortcuts": [
        {
          "name": "Market Intelligence",
          "short_name": "Markets",
          "description": "Check current market prices",
          "url": "/explore",
          "icons": [{ "src": "./assets/images/icon.png", "sizes": "96x96" }]
        },
        {
          "name": "Quality Assessment",
          "short_name": "Quality",
          "description": "Assess crop quality",
          "url": "/quality-assessment",
          "icons": [{ "src": "./assets/images/icon.png", "sizes": "96x96" }]
        },
        {
          "name": "Scheme Tracker",
          "short_name": "Schemes",
          "description": "Track government schemes",
          "url": "/scheme-tracker",
          "icons": [{ "src": "./assets/images/icon.png", "sizes": "96x96" }]
        }
      ]
    }
  }
}
